<odoo>
  <data>

    <!--
        ================================
        CUSTOM CATEGORY
        ================================
    -->

    <record id="view_product_category_form_custom" model="ir.ui.view">
      <field name="name">product.category.form.inherit</field>
      <field name="model">product.category</field>
      <field name="inherit_id" ref="product.product_category_form_view" />
      <field name="arch" type="xml">
        <xpath expr="//div[@class='oe_title']" position="after">
          <div>
            <label for="code" string="Category Code" />
            <field name="code" placeholder="Code for Category" />
          </div>
        </xpath>
      </field>
    </record>

    <record id="view_product_category_list_custom" model="ir.ui.view">
      <field name="name">product.category.list.inherit</field>
      <field name="model">product.category</field>
      <field name="inherit_id" ref="product.product_category_list_view" />
      <field name="arch" type="xml">
        <list string="Product Categories">
          <field name="code" string="Product Category Code" />
        </list>
      </field>
    </record>


    <!--
        ================================
        CUSTOM PRODUCT TEMPLATE
        ================================
    -->

    <record id="view_product_template_form_inherit" model="ir.ui.view">
      <field name="name">product.template.form.inherit</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_only_form_view" />
      <field name="arch" type="xml">

        <!-- Locate dimension  -->
        <xpath expr="//page[@name='general_information']" position="inside">
          <group string="Dimensions">
            <group>
              <field name="width" placeholder="or Length if size using LxWxH" />
              <field name="depth" placeholder="or Width if size using LxWxH" />
              <field name="height" placeholder="" />
            </group>
            <group>
              <field name="dimension" placeholder="E.g w260 x d85 x h75 x bh70" />
              <field name="cbm" placeholder="" />
            </group>
          </group>
        </xpath>

        <!-- Locate the internal reference field and make it readonly -->
        <field name="default_code" position="attributes">
          <attribute name="readonly">1</attribute>
        </field>

      </field>
    </record>


  </data>
</odoo>